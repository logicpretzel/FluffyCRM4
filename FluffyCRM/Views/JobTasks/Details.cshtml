@model FluffyCRM.Models.JobTask

@{
    ViewBag.Title = "Job: Task Details";
    Layout = "";
}

@*<h2>Details</h2>*@

<div>
    <h4>@(ViewBag.Title)</h4>
    <hr />
    <div class="container-fluid">
        <div class="panel col-med-12 col-med-12 col-lg-12 col-xs-12 ">
            

                <div class="col-sm-6 col-med-4 col-lg-4  col-xs-12">
                    <span>@Html.DisplayNameFor(model => model.Name)</span><br />
                    @Html.DisplayFor(model => model.Name)
                </div>
                <div class="col-sm-6 col-med-4 col-lg-4  col-xs-12 ">
                    <span>  @Html.DisplayNameFor(model => model.CreatedBy)</span><br />
                            @Html.DisplayFor(model => model.CreatedBy)      <br />
                    @if (Model.ContactUserId != null)
                    {
                         <span> @Html.DisplayNameFor(model => model.ContactUserId)</span><br />
                                @Html.DisplayFor(model => model.ContactUserId)      <br />
                    }
                   
                </div>
                <div class="col-sm-6 col-med-4 col-lg-4  col-xs-12">
                    <span>@Html.DisplayNameFor(model => model.StartDate)</span><br />
                    @Html.DisplayFor(model => model.StartDate)<br />
                    <span>@Html.DisplayNameFor(model => model.DueDate)</span><br />
                    @Html.DisplayFor(model => model.DueDate)<br />
                    <span>@Html.DisplayNameFor(model => model.CompletedDate)</span><br />
                    @Html.DisplayFor(model => model.CompletedDate)<br />

                </div>



          
            <div class="col-sm-6 col-med-6 col-lg-6  col-xs-12">
                <span>@Html.DisplayNameFor(model => model.TicketId)</span><br />
                @Html.DisplayFor(model => model.TicketId)<br />
            </div>
            <div class="col-sm-6 col-med-6 col-lg-6  col-xs-12">
                <span>@Html.DisplayNameFor(model => model.ParentTaskId)</span><br />
                <span>@Html.DisplayFor(model => model.ParentTaskId)</span> <br />
            </div>
                <div class="col-sm-12 col-med-12 col-lg-12  col-xs-12">
                    <span>@Html.DisplayNameFor(model => model.Description)</span><br />
                    @Html.DisplayFor(model => model.Description)<br />
                </div>

           
        </div>
  
   

       


    </div>
    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |  @Html.ActionLink("Back to List", "Index")
    </p>
